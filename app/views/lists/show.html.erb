<h2><%= @list.name %></h2>

<% @list.bookmarks.each do |bookmark| %>
  <p><%= bookmark.movie.rating %> || <%= bookmark.movie.title %> \\ <%= bookmark.comment %>- <%= link_to 'Delete', bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></p>
<% end %>

<%= link_to "Add a movie", new_list_bookmark_path(@list) %>
<%= link_to "Back to list", lists_path %>
